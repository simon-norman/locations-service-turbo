{
	"compilerOptions": {
		"outDir": "dist",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": "./",
		"paths": {
			"src/*": ["./src/*"]
		},
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true
	},
	"exclude": ["node_modules"]
}
